@using TravelDiary.Models;

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Travel History</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container text-center">
      <h2>Past Travels</h2>
      <hr>
      @if (Model.Count == null)
      {
        <p>Time to get logging!</p>
      }
      else 
      {
        @foreach (Place place in Model)
        {
          <p>You went to @place.CityName, @place.Country</p>
          <p>For @place.Duration days.</p>
          <p>You thought that your favorite bit was: @place.Activity</p>
        }
      }
    </div>
  </body>
</html>